<div class="row">
  <div class="col-lg-3">
    <h4>Buy Stocks</h4>
    <!-- col.// -->
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="mb-3">
          <var class="price h5">$<%= @quote.latest_price %></var>
          <span class="text-muted">/per stock</span>
        </div>
        <div class="mb-4">
          <% if @stock.present? %>
            <%= render 'form', quote: @quote %>
          <% else %>
            <%= render 'form', quote: @quote %>
          <% end %>
        </div>
        <ul class="list-icon">
          <li>Symbol: <%= @quote.symbol %></li>
          <li>Company: <%= @quote.company_name %></li>
          <% if @stock.present? %>
            <% if @stock.stock_quantity > 0 %>
              <li> Owned STOCKS: <%= @stock.stock_quantity %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
      <!-- card-end.// -->
    </div>
    <!-- card.// -->
  </div>
  <!-- row.// -->
  <div class='col-6'>
    <%= image_tag 'undraw_growing_re_olpi.svg' %>
  </div>
</div>
<!-- container .// -->
