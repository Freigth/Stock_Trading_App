<div>
  <h2>Create a User</h2>
  <%= form_with model: @user, :html => {:class => "mt-3 w-100 d-flex flex-column"}, :url => '/users/admin_create' do |form| %>
    <div class="w-100">
      <%= form.label :email%>
      <%= form.text_field :email, class:"form-control" %>
      <% if @user.errors.any? %>
        <p class='text-danger'><i class="fa-solid fa-triangle-exclamation"></i> <%= @user.errors.full_messages[0] %></p>
      <% end %>
    </div>
    <div class="w-100">
      <%= form.label :password %>
      <%= form.password_field :password, class:"form-control" %>
      <% if @user.errors.any? %>
        <p class='text-danger'><i class="fa-solid fa-triangle-exclamation"></i> <%= @user.errors.full_messages[1] %></p>
      <% end %>
    </div>
    <div class="w-100 mt-3">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class:"form-control" %>
    </div>
    <%= form.submit class: "btn btn-success mt-3" %>
  <% end %>
</div>
