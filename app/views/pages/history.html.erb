<h5 class='mb-5' style='color: #1C3879'><strong>Transaction History</strong></h5>
<table class="table table-hover table-sm table-dark">
  <thead>
    <tr>
      <th>#</th>
      <th>Transaction Type</th>
      <th>Stock Symbol</th>
      <th>Amount</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @histories.each do |history| %>
      <% if history.status == 'sell' %>
        <tr class='table-danger'>
          <th scope="row"><%= history.id %></th>
          <td><%= history.status %></td>
          <td><%= history.symbol %></td>
          <td><%= number_with_precision(history.amount, precision: 2) %></td>
          <td><%= history.created_at %></td>
        </tr>
      <% else %>
        <tr class='table-success'>
          <th scope="row"><%= history.id %></th>
          <td><%= history.status %></td>
          <td><%= history.symbol %></td>
          <td><%= number_with_precision(history.amount, precision: 2) %></td>
          <td><%= history.created_at %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
